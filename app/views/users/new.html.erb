<html>
	<head>
		<%= stylesheet_link_tag  'bootstrap.css', media: 'all', 'data-turbolinks-track' => true %>
		<%= stylesheet_link_tag  'bootstrap-theme.css', media: 'all', 'data-turbolinks-track' => true %>	
		<%= stylesheet_link_tag  'login.css', media: 'all', 'data-turbolinks-track' => true %>	
		<link href='https://fonts.googleapis.com/css?family=Josefin+Sans:700' rel='stylesheet' type='text/css'>
		<title>PDF Viewer | Sign Up</title>
	</head>
	<body>
		<div class="container">
		    <div class="row">
		        <div class="col-sm-6 col-md-4 col-md-offset-4">
		            <h1 class="text-center login-title header">Welcome to PDF Viewer</h1>
		            <div class="account-wall">
		                <img class="logo displayed" src="https://cdn4.iconfinder.com/data/icons/CS5/512/ACP_PDF%202_file_document.png" alt="Logo">
		                <div class="form-signin">
		                <%= form_for(@user) do |f| %>
      					<%= f.text_field :first_name, :placeholder => "First name",class:"form-control" %>
      					<%= f.text_field :last_name, :placeholder => "Last name",class:"form-control" %>
      					<%= f.email_field :email, :placeholder => "Email" ,class:"form-control"%>
      					<%= f.password_field :password, :placeholder => "Password",class:"form-control" %>
      					<%= f.submit "Create an account", class: "btn btn-block btn-lg btn-danger" %>
    					<% end %>
		                </div>
		            </div>
		       
		            <%= link_to "Already have an account ?", login_path, class:"text-center new-account" %>
		        </div>
		    </div>
		</div>
	</body>
</html>